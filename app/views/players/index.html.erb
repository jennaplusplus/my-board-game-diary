<div class="page-header">
  <h1>Players</h1>
</div>

<%= link_to "Add a new player", new_player_path, class: "btn btn-success" %>

<h2>Click each player to see details or to edit/delete</h2>
  <table class="table table-hover">
    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= link_to "#{player.name}", player_path(player) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= link_to "Back home", root_path, class: "btn btn-default" %>
