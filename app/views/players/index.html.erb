<header id="title">
  <h1>Players</h1>
</header>

<h3><%= link_to "Add a new player", new_player_path, :class => "do_button" %></h3>

<section class="information">
  Click each player to see details or to edit/delete
  <table>
    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= link_to "#{player.name}", player_path(player) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<footer id="footer">
  <%= link_to "Back home", root_path %>
</footer>
