<%= form_for @player, url: @url_path do |f| %>
  <fieldset>
    <legend>Player</legend>
      <%= f.label :name, "Name: "%>
      <%= f.text_field :name %>
      <br>
      <%= f.label :email, "Email: "%>
      <%= f.text_field :email %>
      <br>
      <%= f.label :city, "City: "%>
      <%= f.text_field :city %>
      <br>
      <%= f.label :state, "State: "%>
      <%= f.select :state, ["AL","AK","AZ","AR","CA","CO","CT","DE","FL","GA","HI","ID","IL","IN","IA","KS","KY","LA","ME","MD","MA","MI","MN","MS","MO","MT","NE","NV","NH","NJ","NM","NY","NC","ND","OH","OK","OR","PA","RI","SC","SD","TN","TX","UT","VT","VA","WA","WV","WI","WY"], {include_blank: true}  %>

      <br>
      <%= f.label :age, "Age :" %>
      <%= f.number_field :age, :min => 13, :step => 1 %>
      <br>
      <%= f.label :bio, "Bio: "%>
      <%= f.text_field :bio %>
      <br>
      <%= f.submit "#{button_text}" %>
  </fieldset>
<% end %>
