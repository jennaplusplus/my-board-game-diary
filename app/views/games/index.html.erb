<div class="page-header">
  <h1>Games</h1>
</div>

<%= link_to "Add a new game", new_game_path, class: "btn btn-success" %>

<h2>Click each game to see details or to edit/delete</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th>Players</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to "#{game.name}", game_path(game) %></td>
        <td><%= game.genre.capitalize %></td>
        <td><%= game.min_players %> to <%= game.max_players %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back home", root_path, class: "btn btn-default" %>
