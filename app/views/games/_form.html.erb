<%= form_for @game, url: @url_path do |f| %>
  <fieldset>
    <legend>Game</legend>
      <%= f.label :name, "Name: "%>
      <%= f.text_field :name %>
      <br>
      <%= f.label :genre, "Genre: "%>
      <%= f.text_field :genre %>
      <br>
      <%= f.label :time_to_play, "Time to play (hours): "%>
      <%= f.number_field :time_to_play, :min => 0, :step => 0.25 %>
      <br>
      <%= f.label :min_players, "Number of players (minimum) :" %>
      <%= f.number_field :min_players, :min => 1, :step => 1 %>
      <br>
      <%= f.label :max_players, "Number of players (maximum) :" %>
      <%= f.number_field :max_players, :min => 1, :step => 1 %>
      <br>
      <%= f.submit "#{button_text}" %>
  </fieldset>
<% end %>
