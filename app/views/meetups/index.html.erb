<h1>Meetups Central</h1>

<h3><%= link_to "Record a new meetup", new_meetup_path %></h3>

<% @meetups.each do |meetup| %>
  <%= link_to "Meetup at #{meetup.location} on #{meetup.date}", meetup_path(meetup) %>
  <ul>
    <li><%= link_to "Edit this meetup", edit_meetup_path(meetup) %></li>
    <li><%= link_to "Delete this meetup", meetup_path(meetup), method: :delete, data: { confirm: 'Are you sure?' }  %></li>
  </ul>
<% end %>
